{
  "compilerOptions": {
    "target": "es6",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    // "isolatedModules": false,
    // "module": "commonjs"
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
